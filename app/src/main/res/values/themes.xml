<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Patmore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/twitterBlue</item>
        <item name="colorPrimaryVariant">@color/twitterWhite</item>
        <item name="colorOnPrimary">@color/twitterBlack</item>
        <item name="android:textColorPrimary">@color/twitterBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="textBody">
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">500</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">@color/twitterBlack</item>
    </style>

    <style name="textBold">
        <item name="android:textSize">24sp</item>
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
    </style>

    <style name="textUserName">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="textUserHandle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/dm_sans_italics</item>
    </style>

    <style name="textTime">
        <item name="android:textSize">24sp</item>
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
    </style>

    <style name="textTweet">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="lineSpacing">20sp</item>
    </style>

    <style name="textHelper">
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">400</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
    </style>

    <style name="fourRoundedEdgeImageView" parent="">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <!--The base text appearance for all buttons-->
    <style name="TextAppearance.Body.White" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/twitterWhite</item>
    </style>

    <!--Text styling for blue button, with selector-->
    <style name="TextAppearance.ProgressButton.Purple" parent="@style/TextAppearance.Body.White">
        <item name="android:textColor">@color/blue_button_text_selector</item>
    </style>

    <!--Blue Button Theme-->
    <style name="ThemeOverlay.Widget.ProgressButton.Purple" parent="">
        <item name="android:textAppearanceButton">@style/TextAppearance.ProgressButton.Purple</item>
        <item name="android:colorControlHighlight">@color/twitterGrey</item>
    </style>

    <style name="Widget.ProgressButton.Purple" parent="">
        <item name="android:theme">@style/ThemeOverlay.Widget.ProgressButton.Purple</item>
        <item name="android:background">@drawable/button_blue_shape</item>
    </style>

    <style name="leftImageTwoImageView" parent="">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="oneImageImageView" parent="">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="rightImageTwoImageView" parent="">
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="topImageThreeImageView" parent="">
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <style name="topLeftImageFourImageView" parent="">
        <item name="cornerSizeTopLeft">8dp</item>
    </style>

    <style name="bottomLeftImageFourImageView" parent="">
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="bottomImageThreeImageView" parent="">
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

</resources>